<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ShowInTaskbar="False" Title="Timer" Height="49" Width="79" AllowsTransparency="True"
        WindowStyle="None">
    <Control.Background>
        <SolidColorBrush Opacity="0"/>
    </Control.Background>
    <Grid HorizontalAlignment="Left" Width="81" Height="63" VerticalAlignment="Center">
        <Label x:Name="counterLabel" Content="" HorizontalAlignment="Center" Width="79" Foreground="White"
           FontSize="28" BorderThickness="0,0,0,0" VerticalAlignment="Center" Height="48" BorderBrush="White"
           SnapsToDevicePixels="True" Background="{x:Null}">
            <UIElement.Effect>
                <DropShadowEffect Direction="300" ShadowDepth="2" Opacity="0.8" BlurRadius="4"/>
            </UIElement.Effect>
        </Label>
    </Grid>
 

</Window>
